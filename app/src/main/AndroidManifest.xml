<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Permiso de Internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_ermotos"
        android:usesCleartextTraffic="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_ermotos_round"
        android:supportsRtl="true"
        android:forceDarkAllowed="false"
        android:theme="@style/Theme.Facturacioninventario">


        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Facturacioninventario.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Flujo de autenticaciÃ³n ahora se maneja con Fragments en el NavHost -->
    </application>

</manifest>